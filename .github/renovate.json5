{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  labels: [
    'renovate',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/.chart-attributes$/',
      ],
      matchStringsStrategy: 'combination',
      matchStrings: [
        'CHART_NAME=(?<depName>.+)',
        'CHART_VERSION=(?<currentValue>.+)',
        'REPO_URL=(?<registryUrl>.+)',
      ],
      datasourceTemplate: 'helm',
      versioningTemplate: 'semver',
    },
    {
      customType: 'regex',
      description: 'Bump up cli in crossplane.yaml',
      managerFilePatterns: [
        '/crossplane.yaml/',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\s*\\n\\s*image:\\sxpkg.upbound.io/upbound/up-cli:"(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: '{{{datasource}}}',
      depNameTemplate: '{{{depName}}}',
    },
    {
      customType: 'regex',
      description: 'Bump yq',
      managerFilePatterns: [
        '/.*publish-package.yaml/',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\s*\\n\\s*YQ_VERSION="(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: '{{{datasource}}}',
      depNameTemplate: '{{{depName}}}',
    },
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'major-update',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
      ],
      addLabels: [
        'minor-update',
      ],
    },
    {
      matchUpdateTypes: [
        'patch',
      ],
      addLabels: [
        'patch-update',
      ],
    },
    {
      matchUpdateTypes: [
        // 'major',
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      matchDepNames: [
        'argo-cd'
      ],
      automerge: true,
    },
  ],
}
